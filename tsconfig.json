{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "lib": ["es2017", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "rootDir": "./src",
    "strict": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
  ],
  "exclude": []
}
